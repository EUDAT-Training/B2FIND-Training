<?xml version="1.0" encoding="UTF-8" ?>
<mapping-table>
  <!-- Mapping for DEIMS in DublinCore default. -->
  <namespaces>
    <namespace ns="r" uri="http://www.openarchives.org/OAI/2.0/"/>
    <namespace ns="dc" uri="http://purl.org/dc/elements/1.1/"/>
    <namespace ns="dct" uri="http://purl.org/dc/terms/"/>
    <namespace xmlns:ows="http://www.opengis.net/ows"/>
  </namespaces>
  <mappings>
    <!-- General Information -->
    <field name="title">
      <xpath>//dc:title/text()</xpath>
    </field>
    <field name="notes">
      <xpath>//dct:abstract/text()</xpath>
    </field>
    <field name="tags">
      <xpath>//dc:subject/text()</xpath>
    </field>
    <!-- Access data -->
    <field name="url">
      <xpath>//dct:references[0]/text()</xpath>
    </field>
    <field name="Rights">
      <xpath>//dc:rights/text()</xpath>
    </field>
   <!-- Provenance data -->
    <field name="Discipline">
      <xpath>//dc:subject/text()</xpath>
    </field>
    <field name="author">
      <xpath>//dc:creator/text()</xpath>
    </field>
    <field name="Publisher">
      <string>DEIMS</string>
    </field>
    <field name="PublicationYear">
      <xpath>//dc:date/text()</xpath>
    </field>
   <!-- Formal data -->
    <field name="Language">
      <xpath>//dc:language/text()</xpath>
    </field>
    <field name="SpatialCoverage">
      <xpath>//ows:BoundingBox/ows:LowerCorner/text()</xpath>
    <field name="SpatialCoverage">
      <xpath>//ows:BoundingBox/ows:UpperCorner/text()</xpath>
    </field>
    <field name="TemporalCoverage">
      <xpath>//dc:description/text()</xpath>
    </field>
    <field name="Format">
      <xpath>//dc:format/text()</xpath>
    <field name="ResourceType">
      <xpath>//dc:type/text()</xpath>
    </field>
    <!-- Additional Information -->
    <field name="Contact">
      <xpath>//dc:contributer/text()</xpath>
    </field>
    <!-- Hidden fields, only shown to logged in CKAN users -->
    <field name="fulltext">
      <xpath>normalize-space(string(/))</xpath>
    </field>
    <field name="oai_identifier">
      <xpath>//r:header/r:identifier/text()</xpath>
    </field>
    <field name="oai_set">
      <xpath>//r:header/r:setSpec/text()</xpath>
    </field>
  </mappings>
</mapping-table>
